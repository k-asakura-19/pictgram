<div class="topic-new-wrapper" >
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        
      
        
        <h1 class="text-center">Comment<%=  "トピック番号「#{@post.topic_id}」" %></h1>
        <%= form_for @post do |f| %>
          

          <div class="form-group">
            <%= f.label :comment %>
            <%= f.text_area :comment, class: 'form-control' %>
            
            <div class="hidden">
            <%= f.number_field :topic_id, class: 'form-control' %>
            </div>
            
          </div>

          <%= f.submit '投稿', class: 'btn btn-black btn-block' %>

        <% end %>
      </div>
    </div>
  </div>
</div>